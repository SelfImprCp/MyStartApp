<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_f7f7f8"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.cp.mylibrary.custom.TitleBarView
        android:id="@+id/feedback_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.cp.mylibrary.custom.TitleBarView>



     <com.cp.mylibrary.custom.CPScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">
     <com.zhy.autolayout.AutoLinearLayout
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_15"
        android:visibility="visible"
        android:text="请留下您的宝贵意见，以帮助我们做得更好!"
        android:textColor="@color/xiaoshutou_text_666666"
        android:textSize="@dimen/text_size_13" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/feedback_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15"
        android:background="@color/bg_color_f7f7f8" />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="300px">


        <EditText
            android:id="@+id/feedback_exit_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

             android:layout_marginTop="@dimen/space_15"
            android:background="@drawable/rounded_bg_white"
            android:gravity="top"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"
            android:textColor="@color/xiaoshutou_text_333333"
            android:textSize="@dimen/text_size_14"

            android:hint="说点什么吧..."
            android:padding="@dimen/space_8" />

    </com.zhy.autolayout.AutoLinearLayout>

         <Button
             android:id="@+id/feedback_commit_but"

 android:layout_marginTop="@dimen/space_15"
             style="@style/all_button_style"
android:textSize="@dimen/text_size_18"
             android:text="发送" />


     </com.zhy.autolayout.AutoLinearLayout>


     </com.cp.mylibrary.custom.CPScrollView>

</com.zhy.autolayout.AutoLinearLayout>