<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/shop_home_baoxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/space_8"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_4"
                android:layout_marginTop="@dimen/space_8"

                android:background="@drawable/rounded_shop_baoxian"
                android:gravity="center"
                android:paddingBottom="@dimen/space_4"
                android:paddingLeft="@dimen/space_8"
                android:paddingRight="@dimen/space_8"
                android:paddingTop="@dimen/space_4"
                android:text="国内保险"
                android:textColor="@color/white_cp_util"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/shop_home_jijin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/space_8"
                android:layout_marginLeft="@dimen/space_4"
                android:layout_marginRight="@dimen/space_8"
                android:layout_marginTop="@dimen/space_8"
                android:gravity="center"

                android:paddingBottom="@dimen/space_4"
                android:paddingLeft="@dimen/space_8"
                android:paddingRight="@dimen/space_8"
                android:paddingTop="@dimen/space_4"
                android:text="国内基金"
                android:textColor="@color/white_cp_util"
                android:textSize="@dimen/text_size_12" />


        </LinearLayout>


        <ImageView
            android:id="@+id/shop_search_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_13"
            android:src="@drawable/img_seach"
            android:visibility="gone" />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/shop_main_frame_layout"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@color/bg_color_f7f7f8"></FrameLayout>


</LinearLayout>