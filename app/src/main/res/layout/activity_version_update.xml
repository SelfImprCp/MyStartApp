<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xiaoshutou_fegese_f7f7f8"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <com.cp.mylibrary.custom.TitleBarView
        android:id="@+id/version_update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.cp.mylibrary.custom.TitleBarView>


    <View
        style="@style/feng_ge_xian"

        android:background="@color/xiaoshutou_fegese_ceced1"></View>

    <View

        style="@style/feng_ge_xian"
        android:layout_height="@dimen/space_25"
        android:background="@color/xiaoshutou_fegese_f7f7f8"></View>

    <View

        style="@style/feng_ge_xian"
        android:background="@color/xiaoshutou_fegese_ceced1"></View>




    <com.zhy.autolayout.AutoRelativeLayout

        android:id="@+id/version_update_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space_12"

        android:paddingTop="@dimen/space_12"
        android:background="@color/white_cp_util">


        <TextView
            style="@style/my_item_text"

            android:text="版本检测"></TextView>


         <LinearLayout
             android:id="@+id/version_update_lin"
             android:layout_toLeftOf="@+id/version_update_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:background="@drawable/version_updata_new"
             >


             <TextView

                 style="@style/my_item_text"
                 android:layout_alignParentRight="true"
                 android:textColor="@color/white_cp_util"
                 android:layout_marginRight="@dimen/space_15"
                 android:textSize="@dimen/text_size_15"
android:layout_gravity="center"
                 android:text="有新版本更新"></TextView>

         </LinearLayout>

        <TextView
            android:id="@+id/version_update_text"
            style="@style/my_item_text"
            android:layout_alignParentRight="true"
            android:textColor="@color/xiaoshutou_text_666666"
            android:layout_marginRight="@dimen/space_15"

            android:text="1.0.0"></TextView>


    </com.zhy.autolayout.AutoRelativeLayout>

    <View


        style="@style/feng_ge_xian"
        android:background="@color/xiaoshutou_fegese_ceced1"></View>

</LinearLayout>