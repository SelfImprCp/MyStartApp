<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_f7f7f8"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_cp_util"
            android:gravity="center"
            android:padding="@dimen/space_10"
            android:text="小树投"
            android:textColor="@color/xiaoshutou_text_333333"
            android:textSize="@dimen/text_size_18" />

        <View style="@style/feng_ge_xian"></View>

    </LinearLayout>


    <com.cp.mylibrary.custom.CPScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_cp_util"

                android:orientation="vertical">


                <FrameLayout
                    android:id="@+id/home_fragment_top_banner_rel"
                    android:layout_width="match_parent"
                    android:layout_height="300px"

                    android:visibility="visible">


                    <fragment
                        android:id="@+id/fragment_home_viewpager_content"
                        android:name="com.cp.mylibrary.banner.CycleViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:id="@+id/home_no_loagin_lin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/space_15"
                        android:layout_marginTop="@dimen/space_8"
                        android:background="@drawable/rounded_home_no_login"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/space_4"

                        android:paddingLeft="@dimen/space_6"
                        android:paddingRight="@dimen/space_12"
                        android:paddingTop="@dimen/space_4">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/home_no_login_hean" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/space_4"
                            android:text="登录"
                            android:textColor="@color/white_cp_util"

                            />

                    </LinearLayout>
                </FrameLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_marginTop="@dimen/space_20"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/home_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/space_4"

                        android:layout_marginLeft="@dimen/space_8"
                        android:background="@drawable/rounded_home_huoqi_bg"
                        android:padding="@dimen/space_3"
                        android:text="活期"
                        android:textColor="@color/white_cp_util" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/space_20"

                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_shouyilv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="0.00"
                            android:textColor="@color/xiaoshutou_text_fe5933"
                            android:textSize="50sp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/space_2"
                            android:text="%"
                            android:textColor="@color/xiaoshutou_text_fe5933"
                            android:textSize="@dimen/text_size_25" />

                    </LinearLayout>

                    <View style="@style/feng_ge_xian"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:text="每日选取收益最高的货币基金"
                        android:textColor="@color/xiaoshutou_text_999999"
                        android:textSize="@dimen/text_size_11" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_20"

                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:text="T+1"
                            android:textColor="@color/xiaoshutou_text_fe5933"
                            android:textSize="@dimen/text_size_18" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/space_8"
                            android:text="随投随取"
                            android:textColor="@color/xiaoshutou_text_333333"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginTop="@dimen/space_4"
                            android:text="提现T+1到账"

                            android:textColor="@color/xiaoshutou_text_c3c3c3"
                            android:textSize="@dimen/text_size_12" />


                    </LinearLayout>


                    <View
                        style="@style/feng_ge_xian"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/space_15"
                        android:layout_marginTop="@dimen/space_15"></View>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/home_min_value_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:text="0.01元"
                            android:textColor="@color/xiaoshutou_text_fe5933"
                            android:textSize="@dimen/text_size_18" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginTop="@dimen/space_8"
                            android:text="门槛低"
                            android:textColor="@color/xiaoshutou_text_333333"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/home_min_value_2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/space_4"
                            android:text="0.01元起购"
                            android:textColor="@color/xiaoshutou_text_c3c3c3"
                            android:textSize="@dimen/text_size_12" />


                    </LinearLayout>

                    <View
                        style="@style/feng_ge_xian"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/space_15"
                        android:layout_marginTop="@dimen/space_15"></View>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:text="100%"
                            android:textColor="@color/xiaoshutou_text_fe5933"
                            android:textSize="@dimen/text_size_18" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginTop="@dimen/space_8"
                            android:text="本息保障"
                            android:textColor="@color/xiaoshutou_text_333333"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/space_4"
                            android:text="正规金融产品"
                            android:textColor="@color/xiaoshutou_text_c3c3c3"
                            android:textSize="@dimen/text_size_12" />


                    </LinearLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/home_lijitouzi"
                    style="@style/all_button_style"

                    android:layout_marginTop="@dimen/space_15"
                    android:text="立即投资" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/space_2"
                        android:gravity="center"
                        android:text="基金销售由上海长量基金公司提供"
                        android:textColor="@color/xiaoshutou_text_c3c3c3"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/space_2"
                        android:gravity="center"
                        android:text="收益数据公供参考,投资有风险,投资需谨慎"
                        android:textColor="@color/xiaoshutou_text_c3c3c3"
                        android:textSize="@dimen/text_size_12" />

                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/space_15"
                    android:layout_marginTop="@dimen/space_15"
                    android:src="@drawable/home_jinxuan_licai" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/space_6"
                android:layout_marginTop="@dimen/space_14"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已累计为 "
                    android:textColor="@color/xiaoshutou_text_B1B1B1" />


                <TextView
                    android:id="@+id/home_touzirenshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="0000"
                    android:textColor="@color/xiaoshutou_text_fe5933" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text=" 位投资人提供投资金额(元)"
                    android:textColor="@color/xiaoshutou_text_B1B1B1" />


            </LinearLayout>

            <TextView
                android:id="@+id/home_touziqian"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/space_10"
                android:text="500000"
                android:textColor="@color/xiaoshutou_text_656565"
                android:textSize="@dimen/text_size_32"
                android:textStyle="bold" />


        </LinearLayout>


    </com.cp.mylibrary.custom.CPScrollView>


</LinearLayout>